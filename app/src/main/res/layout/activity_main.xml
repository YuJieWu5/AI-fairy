<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/A0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/intro1"
        android:visibility="visible" />

    <FrameLayout
        android:id="@+id/A1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/forest2"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1400px"
            android:background="@drawable/rounded_shape"
            android:text="「咦奇怪這是哪裡，我怎麼會走到這裡⋯」"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="20dp" />

        <FrameLayout
            android:id="@+id/A10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/light"
            android:visibility="invisible">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1400px"
                android:background="@drawable/rounded_shape"
                android:text="「那邊好像有面鏡子耶！過去看看好了」"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1600px"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="220.8px"
                    android:layout_height="101.6px"
                    android:background="@mipmap/next" />

            </LinearLayout>

        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/A2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/mirror"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1400px"
            android:background="@drawable/rounded_shape"
            android:text="「嗯？這鏡子怎麼有點奇怪」"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1600px"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="220.8px"
                android:layout_height="101.6px"
                android:layout_marginRight="600px"
                android:background="@mipmap/back" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="220.8px"
                android:layout_height="101.6px"
                android:background="@mipmap/next" />

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/A3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/mirror"
        android:orientation="vertical"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="235px"
            android:layout_height="400px"
            android:layout_marginLeft="604px"
            android:layout_marginTop="834px" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1300px"
            android:background="@drawable/rounded_shape"
            android:gravity="center"
            android:textColor="@android:color/background_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1600px"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn3"
                android:layout_width="220.8px"
                android:layout_height="101.6px"
                android:layout_marginRight="600px"
                android:background="@mipmap/back" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="220.8px"
                android:layout_height="101.6px"
                android:background="@mipmap/next" />

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/A4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/cave"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1400px"
            android:background="@drawable/rounded_shape"
            android:text="「奇怪！！！那邊怎麼有隻小精靈？？」"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="20dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_shape"
            android:text="【請選擇一個洞口來追小精靈吧！！！】"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="20dp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="171.2px"
            android:layout_height="190.4px"
            android:layout_marginLeft="400px"
            android:layout_marginTop="790px"
            android:src="@mipmap/fairy"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="match_parent"
            android:layout_height="900px"
            android:layout_marginTop="400px"
            android:alpha="0"
            android:background="@android:color/background_light" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/C1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Bump!"
            android:textColor="@android:color/background_light"
            android:textSize="80px"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="「哎呀，好像被什麼東西絆倒了」"
            android:textColor="@android:color/background_light"
            android:textSize="20dp"
            android:visibility="invisible" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/C2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/leave"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1400px"
            android:background="@drawable/rounded_shape"
            android:text="「奇怪，怎麼又是森林了呢⋯」"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="20dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/C3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/end"
        android:visibility="invisible">

    </FrameLayout>


</android.support.constraint.ConstraintLayout>