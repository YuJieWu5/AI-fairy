<?xml version="1.0" encoding="utf-8"?>
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MapsActivity" >
    <Button
        android:id="@+id/open_camera"
        android:layout_width="140px"
        android:layout_height="140px"
        android:layout_marginLeft="915px"
        android:layout_marginTop="45px"
        android:background="@mipmap/cameraicon"/>
    <Button
        android:id="@+id/open_information"
        android:layout_width="140px"
        android:layout_height="140px"
        android:layout_marginLeft="915px"
        android:layout_marginTop="200px"
        android:background="@mipmap/information"/>

    <ImageView
        android:id="@+id/fairy"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginLeft="850px"
        android:layout_marginTop="650px"
        android:background="@mipmap/fairy" />

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="800px"
        android:layout_height="1200px"
        android:orientation="vertical"
        android:layout_marginTop="360px"
        android:layout_marginLeft="140px"
        android:background="@android:color/background_light"
        android:visibility="invisible"
        >

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:gravity="center"
            android:text="景點資訊"
            android:textSize="70px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:text="@string/location_indruct"
            android:textSize="55px" />

        <Button
            android:id="@+id/info_close"
            android:layout_width="200px"
            android:layout_height="100px"
            android:layout_marginLeft="580px"
            android:layout_marginTop="70px"
            android:background="@android:color/transparent"
            android:text="OK"
            android:textSize="70px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mission"
        android:layout_width="800px"
        android:layout_height="600px"
        android:layout_marginLeft="140px"
        android:layout_marginTop="1120px"
        android:background="@android:color/background_light"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="350px"
            android:layout_height="wrap_content"
            android:text="關卡一"
            android:textSize="70px"
            android:background="@drawable/stage"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:gravity="center"
            android:text="找到小精靈，領取鑰匙"
            android:textSize="55px" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="200px"
            android:layout_height="200px"
            android:gravity="center"
            android:layout_marginTop="10px"
            android:layout_marginLeft="310px"
            android:background="@mipmap/key" />

        <Button
            android:id="@+id/get_mission"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="GO"
            android:textSize="70px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mission2"
        android:layout_width="800px"
        android:layout_height="600px"
        android:layout_marginLeft="140px"
        android:layout_marginTop="550px"
        android:background="@android:color/background_light"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:gravity="center"
            android:text="找到小精靈後，"
            android:textSize="60px" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:gravity="center"
            android:text="請拍下類似照片！"
            android:textSize="60px" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="400px"
            android:layout_height="300px"
            android:layout_marginLeft="210px"
            android:layout_marginTop="10px"
            android:gravity="center"
            android:background="@mipmap/mission1" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="OK"
            android:textSize="70px" />
    </LinearLayout>
</fragment>